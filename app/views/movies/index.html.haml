-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      %th#title_header{ class: ( "hilite" if @sort == "0")}= link_to "Movie Title", sort_path(0)
      %th Rating
      %th#release_date_header{ class: ( "hilite" if @sort == "1")}= link_to "Release Date", sort_path(1)
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
